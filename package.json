{
    "name": "project_name",
    "version": "1.0.0",
    "main": "dist/infrastructure/api/Server.js",
    "description": "Proyecto que contiene la plantilla para los microservicios de Coordinadora",
    "license": "UNLICENSED",
    "private": true,
    "author": {
        "email": "it@coordinadora.com",
        "name": "Coordinadora Mercantil S.A"
    },
    "scripts": {
        "build": "rimraf dist && tsc -p tsconfig.build.json",
        "infra-as-code": "echo Infrastructure as code",
        "lint": "eslint . --ext .ts --fix",
        "format": "prettier --write \"./src/**/*.ts\"",
        "format-check": "prettier --list-different \"./src/**/*.ts\"",
        "dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/infrastructure/api/Server.js\"",
        "start": "node dist/infrastructure/api/Server.js",
        "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/infrastructure/api/Server.js\"",
        "test": "jest --color --verbose --no-cache",
        "coverage": "jest --coverage",
        "deploy": "sh deploy/deploy.sh",
        "deploy:prod": "ENV=production yarn deploy",
        "deploy:testing": "ENV=testing yarn deploy",
        "release": "standard-version",
        "sonar": "yarn coverage && node analyze.config.js",
        "pre-commit": "yarn test && yarn lint"
    },
    "dependencies": {
        "@itcoordinadora/time": "^1.6.0",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-prom-bundle": "^6.3.6",
        "google-gax": "^2.11.2",
        "helmet": "^4.4.1",
        "inversify": "^5.0.5",
        "joi": "^17.4.0",
        "method-override": "^3.0.0",
        "module-alias": "^2.2.2",
        "morgan": "^1.10.0",
        "nanoid": "^3.1.22",
        "openapi-types": "^8.0.0",
        "pg-promise": "^10.10.1",
        "prom-client": "^13.1.0",
        "reflect-metadata": "^0.1.13",
        "swagger-jsdoc": "^6.0.0",
        "swagger-ui-express": "^4.1.6"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.1",
        "@commitlint/config-conventional": "^12.1.1",
        "@types/body-parser": "^1.19.0",
        "@types/compression": "^1.7.0",
        "@types/cors": "^2.8.10",
        "@types/errorhandler": "^1.5.0",
        "@types/express": "^4.17.11",
        "@types/jest": "^26.0.22",
        "@types/method-override": "^0.0.31",
        "@types/morgan": "^1.9.2",
        "@types/node": "^14.14.37",
        "@types/supertest": "^2.0.11",
        "@types/swagger-jsdoc": "^6.0.0",
        "@types/swagger-ui-express": "^4.1.2",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "eslint": "^7.24.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^4.3.8",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "sonarqube-scanner": "^2.8.0",
        "standard-version": "^9.2.0",
        "supertest": "^6.1.3",
        "ts-jest": "26.5.4",
        "ts-node": "^9.1.1",
        "tsc-watch": "^4.2.9",
        "typescript": "^4.2.4"
    },
    "_moduleAliases": {
        "@application": "dist/application",
        "@domain": "dist/domain",
        "@infrastructure": "dist/infrastructure",
        "@setup": "dist/setup",
        "@util": "dist/util"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS && yarn pre-commit"
        }
    }
}
